{
  "name": "@micromed/herz-ui",
  "version": "0.1.3",
  "description": "Herz UI (/hɛrʦ/ - Hérts) is a design system containing a styleguide(colors, grid, icons, typography) and library of UI components",
  "main": "./components/index.js",
  "files": [
    "components/",
    "theme/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micromed-dev/herz-ui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/micromed-dev/herz-ui/issues"
  },
  "homepage": "https://github.com/micromed-dev/herz-ui#readme",
  "dependencies": {
    "@theme-ui/presets": "^0.3.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "theme-ui": "^0.3.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "dev": "npx styleguidist server",
    "build": "yarn compile && npx styleguidist build",
    "test": "react-scripts test",
    "compile:components": "BABEL_ENV=production babel src/components --out-dir ./components --extensions \".ts,.tsx\" --ignore '@types,*.md'",
    "compile:theme": "BABEL_ENV=production babel src/theme --out-dir ./theme --extensions \".ts,.tsx\" --ignore '@types,*.md'",
    "compile": "yarn compile:components && yarn compile:theme",
    "release": "yarn compile && release-it"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/theme-ui": "^0.3.7",
    "react-docgen-typescript": "^1.20.5",
    "react-styleguidist": "^11.1.5",
    "release-it": "^14.2.2",
    "typescript": "^4.1.3"
  }
}
